# Copy this file to .env and fill in real values before running docker compose up.

# ── API keys ────────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...

# ── Heartbeat timing ────────────────────────────────────────────────────────
# Seconds between full PM→DEV cycles (default: 3600 = 1 hour)
INTERVAL=3600

# Max seconds to wait for a single agent before the heartbeat skips it and
# moves on (default: 3480 = 58 min, leaving a 2-min buffer before next cycle)
AGENT_TIMEOUT=3480
